{
  "name": "take-home-test",
  "version": "1.0.0",
  "repository": "git@github.com:inato/take-home-test.git",
  "author": "inato",
  "license": "MIT",
  "private": true,
  "engines": {
    "yarn": ">=1.7.0",
    "node": "=15.x"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:specs": "yarn test --testPathPattern \\.spec\\.ts$",
    "start": "ts-node index.ts",
    "prepare": "husky install",
    "ci": "yarn lint && yarn test"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.2.0",
    "jest": "26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/@types/**"
    ],
    "testMatch": [
      "<rootDir>/specs/**.spec.ts",
      "<rootDir>/index.e2e.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "ts-node": "^9.1.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn eslint --fix",
      "yarn prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "deps",
          "deps-dev",
          "semantic-release-config"
        ]
      ]
    }
  }
}
